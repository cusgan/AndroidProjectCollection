<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-21dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CSIT284 - F1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bascug, Felisa Melanie Fay G."
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnButtonExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button Exercise" />

        <Button
            android:id="@+id/btnLayoutExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strLayoutExercise" />

        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strCalculator" />

        <Button
            android:id="@+id/btnMidterm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strMidterm" />

        <Button
            android:id="@+id/btnMatch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strMatch3" />

        <Button
            android:id="@+id/btnPassingIntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passing Intent" />

        <Button
            android:id="@+id/btnMenuExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Exercise" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>